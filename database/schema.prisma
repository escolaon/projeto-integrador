generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          Int          @id @default(autoincrement())
  nome        String
  email       String       @unique
  senha       String
  celular     String
  tipo        String       
  turmas      Turma[]
  ocorrencias Ocorrencia[]
  disciplinas Disciplina[] @relation("ProfessorDisciplina")
}

model Turma {
  id          Int          @id @default(autoincrement())
  nome        String
  alunos      Aluno[]
  professores Usuario[]
  ocorrencias Ocorrencia[]
  atividades  Atividade[]
}

model Aluno {
  id                 Int          @id @default(autoincrement())
  nome               String
  email              String       
  endereco           String
  nomeResponsavel    String
  emailResponsavel   String      
  celularResponsavel String
  turma              Turma        @relation(fields: [turmaId], references: [id])
  turmaId            Int
  turmaNome          String
  ocorrencias        Ocorrencia[]
  atividades         Atividade[]
}

model Disciplina {
  id          Int     @id @default(autoincrement())
  nome        String
  professor  Usuario  @relation("ProfessorDisciplina", fields: [professorId], references: [id])
  professorId Int
  atividades         Atividade[]
}

model Ocorrencia {
  id             Int          @id @default(autoincrement())
  turma          Turma        @relation(fields: [turmaId], references: [id])
  turmaId        Int
  turmaNome      String
  aluno          Aluno        @relation(fields: [alunoId], references: [id])
  alunoId        Int
  alunoNome      String
  professor      Usuario      @relation(fields: [professorId], references: [id])
  professorId    Int
  professorNome  String
  disciplinaNome String
  notificacao    Notificacao? @relation(fields: [notificacaoId], references: [id])
  notificacaoId  Int?
}

model Notificacao {
  id          Int          @id @default(autoincrement())
  turmaNome   String
  alunoNome   String
  celular     String
  mensagem    String
  status      String       @default("pendente")
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  ocorrencias Ocorrencia[]
}

model Atividade {
  id             Int      @id @default(autoincrement())
  nome           String
  dt             DateTime
  nota           Float
  turma          Turma    @relation(fields: [turmaId], references: [id])
  turmaId        Int
  turmaNome      String
  aluno          Aluno    @relation(fields: [alunoId], references: [id])
  alunoId        Int
  alunoNome      String
  disciplina     Disciplina    @relation(fields: [disciplinaId], references: [id])
  disciplinaId   Int
  disciplinaNome String
}
